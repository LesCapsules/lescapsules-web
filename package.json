{
  "name": "lescapsules-web",
  "description": "Website for Les Capsules",
  "version": "1.0.0",
  "author": "Bruno Alla <alla.brunoo@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@browniebroke/gatsby-image-gallery": "7.2.0",
    "@browniebroke/react-ui-components": "2.1.0",
    "@fontsource/raleway": "4.5.12",
    "@fontsource/roboto-slab": "4.5.11",
    "@sanity/block-content-to-react": "3.0.0",
    "babel-plugin-styled-components": "2.0.7",
    "gatsby": "5.4.2",
    "gatsby-plugin-google-gtag": "5.4.0",
    "gatsby-plugin-image": "3.4.0",
    "gatsby-plugin-manifest": "5.4.0",
    "gatsby-plugin-netlify": "5.1.0",
    "gatsby-plugin-offline": "6.4.0",
    "gatsby-plugin-react-helmet": "6.4.0",
    "gatsby-plugin-react-svg": "3.3.0",
    "gatsby-plugin-robots-txt": "1.8.0",
    "gatsby-plugin-sentry": "1.0.1",
    "gatsby-plugin-sharp": "5.4.0",
    "gatsby-plugin-sitemap": "6.4.0",
    "gatsby-plugin-styled-components": "6.4.0",
    "gatsby-plugin-typescript": "5.4.0",
    "gatsby-source-filesystem": "5.4.0",
    "gatsby-source-sanity": "7.6.1",
    "gatsby-transformer-sharp": "5.4.0",
    "gray-percentage": "2.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet": "6.1.0",
    "react-icons": "4.7.1",
    "sanitize.css": "13.0.0",
    "slugify": "1.6.5",
    "styled-components": "5.3.6",
    "typescript": "4.9.4"
  },
  "devDependencies": {
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@types/react-helmet": "6.1.6",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/parser": "5.48.2",
    "bundlewatch": "0.3.3",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.1",
    "prettier": "2.8.3"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc",
    "build": "gatsby build --log-pages",
    "prebundlewatch": "gatsby build",
    "bundlewatch": "bundlewatch",
    "develop": "gatsby develop",
    "preview": "gatsby develop -p $PORT -H 0.0.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "prettier"
    ],
    "plugins": [
      "react",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ]
    }
  },
  "bundlewatch": [
    {
      "path": "./public/app-*.js",
      "maxSize": "40KB"
    },
    {
      "path": "./public/component---src-pages-drink-team-*.js",
      "maxSize": "5KB"
    },
    {
      "path": "./public/component---src-pages-index-*.js",
      "maxSize": "10KB"
    },
    {
      "path": "./public/component---src-pages-photos-*.js",
      "maxSize": "10KB"
    },
    {
      "path": "./public/component---src-templates-gallery-*.js",
      "maxSize": "28KB"
    },
    {
      "path": "./public/component---src-templates-video-*.js",
      "maxSize": "6KB"
    },
    {
      "path": "./public/styles*.css",
      "maxSize": "5KB"
    }
  ],
  "renovate": {
    "extends": [
      "github>browniebroke/renovate-configs:js-app"
    ]
  }
}
